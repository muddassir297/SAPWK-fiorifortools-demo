<mvc:View height="100%" 
    controllerName="UI5FioriForTools.controller.MainNavigation.ListView.Tasks" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:grid="sap.ui.layout.cssgrid" 
    xmlns:core="sap.ui.core">

    <f:GridList headerText="Items (10)" 
        items="{path:'/results', templateShareable: true, filters : [{path : 'Status', operator:'Contains', value1:'Completed'}]}">
        <f:customLayout>
            <grid:GridBoxLayout boxMinWidth="17rem" />
        </f:customLayout>
        <f:GridListItem type="Navigation" 
            press="onPress"
            highlight="{StatusInfoState}">
            <VBox height="100%">
                <HBox height="100%" 
                    class="sapUiSmallMargin" 
                    alignItems="Center">
                    <core:Icon size="3rem" 
                        src="sap-icon://workflow-tasks" 
                        class="sapUiSmallMarginEnd" />
                    <VBox>
                        <Title text="{Name}" 
                            wrapping="true" />
                        <Label text="{ScenarioName}" 
                            wrapping="true" />
                        <Text text="{Assignee}" 
                            wrapping="true" />
                        <ObjectStatus text="{Status}" 
                            state="{StatusInfoState}" />
                    </VBox>
                </HBox>
            </VBox>
        </f:GridListItem>
    </f:GridList>
    
</mvc:View>