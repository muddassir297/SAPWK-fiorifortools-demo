<mvc:View height="100%" 
    controllerName="UI5FioriForTools.controller.MainNavigation.ListView.Tasks" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m">

    <List items="{path:'/results', templateShareable: true, filters : [{path : 'Status', operator:'Contains', value1:'Ready'}, {path : 'Status', operator:'Contains', value1:'Yet to be executed'}]}">
        <items>
            <ObjectListItem icon="sap-icon://workflow-tasks" 
                press="onPress" 
                intro="{Type}" 
                title="{Name}" 
                type="Navigation" 
                number="{ScenarioName}" 
                numberUnit="{Assignee}">
                <firstStatus>
                    <ObjectStatus text="{Status}" 
                        state="{StatusInfoState}" />
                </firstStatus>
                <attributes>
                    <ObjectAttribute title="ID" 
                        text="{Id}" />
                    <ObjectAttribute title="Sequence" 
                        text="{Sequence}" />
                </attributes>
            </ObjectListItem>
        </items>
    </List>

</mvc:View>
 