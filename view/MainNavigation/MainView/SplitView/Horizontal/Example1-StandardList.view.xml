<mvc:View controllerName="UI5FioriForTools.controller.MainNavigation.MainView" 
  xmlns:l="sap.ui.layout" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:m="sap.m">

  <m:Page showHeader="true" 
    title="Cloud Integration Service">

    <m:content>
      <l:ResponsiveSplitter defaultPane="default">

        <l:PaneContainer orientation="Horizontal">

          <l:SplitPane requiredParentWidth="960" 
            id="default">
            <m:Panel headerText="Running scenarios" 
              height="100%">
              <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.ListView.withHeader.Scenarios.Example1-StandardList" />
            </m:Panel>
          </l:SplitPane>

          <l:SplitPane requiredParentWidth="960">
            <m:Panel headerText="Pending tasks" 
              height="100%">
              <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.ListView.withHeader.Tasks.PendingTasks.Example1-StandardList" />
            </m:Panel>
          </l:SplitPane>

          <l:SplitPane requiredParentWidth="960">
            <m:Panel headerText="Completed tasks" 
              height="100%">
              <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.ListView.withHeader.Tasks.CompletedTasks.Example1-StandardList" />
            </m:Panel>
          </l:SplitPane>

          <l:SplitPane requiredParentWidth="960">
            <m:Panel headerText="Managed employees" 
              height="100%">
              <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.ListView.withHeader.Employees.Example1-StandardList" />
            </m:Panel>
          </l:SplitPane>

        </l:PaneContainer>

      </l:ResponsiveSplitter>
    </m:content>

  </m:Page>

</mvc:View>