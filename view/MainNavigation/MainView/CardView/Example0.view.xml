<mvc:View controllerName="UI5FioriForTools.controller.MainNavigation.MainView" 
  height="100%" 
  xmlns:l="sap.ui.layout" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:f="sap.f" 
  xmlns:card="sap.f.cards" 
  xmlns:m="sap.m">

  <m:Page showHeader="true" 
    title="Cloud Integration Service">
    <m:content>

      <m:HBox wrap="Wrap">

        <f:Card class="sapUiSmallMargin" 
          width="24rem">

          <f:header>
            <card:Header title="Replicating cost center" 
              subtitle="Integration Scenario" 
              statusText="5 out of 7 tasks scompleted" />
          </f:header>

          <f:content>
            <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.GraphView.Vertical.Scenario1" />
          </f:content>

        </f:Card>

        <f:Card class="sapUiSmallMargin" 
          width="24rem">

          <f:header>
            <card:Header title="Cloud integration" 
              subtitle="Integration Scenario" 
              statusText="5 out of 8 tasks scompleted" />
          </f:header>

          <f:content>
            <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.GraphView.Vertical.Scenario2" />
          </f:content>

        </f:Card>

        <f:Card class="sapUiSmallMargin" 
          width="36rem">

          <f:header>
            <card:Header title="Managed employees" 
              subtitle="All" 
              statusText="6 out of 9 assigned" />
          </f:header>

          <f:content>
            <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.GraphView.Vertical.Employees" />
          </f:content>

        </f:Card>

      </m:HBox>

    </m:content>
  </m:Page>

</mvc:View>