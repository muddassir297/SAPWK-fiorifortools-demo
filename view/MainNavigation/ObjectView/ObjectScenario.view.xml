<mvc:View height="100%" 
    controllerName="UI5FioriForTools.controller.MainNavigation.ObjectView.ObjectScenario" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.f" 
    xmlns:m="sap.m" 
    xmlns="sap.uxap">

    <m:Page title="Cloud Integration Service">
        <m:content>

            <ObjectPageLayout enableLazyLoading="true" 
                headerContentPinnable="true">
                <headerTitle>
                    <ObjectPageDynamicHeaderTitle>

                        <breadcrumbs>
                            <m:Breadcrumbs>
                                <m:Link text='Integration Scenarios' />
                            </m:Breadcrumbs>
                        </breadcrumbs>

                        <expandedHeading>
                            <m:FlexBox wrap="Wrap" 
                                fitContainer="true" 
                                alignItems="Center">
                                <m:Title text="{Name}" 
                                    wrapping="true"></m:Title>
                            </m:FlexBox>
                        </expandedHeading>

                        <snappedHeading>
                            <m:FlexBox wrap="Wrap" 
                                fitContainer="true" 
                                alignItems="Center">
                                <m:FlexBox wrap="NoWrap" 
                                    fitContainer="true" 
                                    alignItems="Center" 
                                    class="sapUiTinyMarginEnd">
                                    <f:Avatar src="sap-icon://workflow-tasks" 
                                        displayShape="Circle" 
                                        displaySize="S" 
                                        class="sapUiTinyMarginEnd" />
                                    <m:Title text="{Name}" 
                                        wrapping="true"></m:Title>
                                </m:FlexBox>
                            </m:FlexBox>
                        </snappedHeading>

                        <expandedContent>
                            <m:Text text="{Documentation}" />
                        </expandedContent>

                        <snappedContent>
                            <m:Text text="{Documentation}" />
                        </snappedContent>

                        <actions>
                            <ObjectPageHeaderActionButton icon="sap-icon://action" 
                                type="Transparent" 
                                text="Share" 
                                tooltip="Share" />
                        </actions>

                        <navigationActions>
                            <ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-up" 
                                type="Transparent" 
                                tooltip="Move up" />
                            <ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-down" 
                                type="Transparent" 
                                tooltip="Move down" />
                        </navigationActions>

                    </ObjectPageDynamicHeaderTitle>

                </headerTitle>
                <headerContent>
                    <m:FlexBox wrap="Wrap" 
                        fitContainer="true" 
                        alignItems="Stretch">

                        <f:Avatar class="sapUiSmallMarginEnd sapUiSmallMarginTop" 
                            src="sap-icon://workflow-tasks" 
                            displaySize="L">
                        </f:Avatar>

                        <l:VerticalLayout class="sapUiSmallMarginEnd sapUiSmallMarginTop">
                            <m:ObjectStatus title="Execution Instance ID" 
                                text="{ExecutionInstanceID}" />
                            <m:ObjectStatus title="Status" 
                                text="{Status}" 
                                state="{StatusInfoState}" />
                            <m:ProgressIndicator percentValue="{Completion}" 
                                displayValue="{CompletedTasks}/{AllTasks}" 
                                showValue="true" 
                                state="None" />
                        </l:VerticalLayout>
                    </m:FlexBox>
                </headerContent>

                <sections>

                    <ObjectPageSection>
                        <subSections>
                            <ObjectPageSubSection mode="Expanded" 
                                title="Description">
                                <blocks>
                                    <m:Text text="Description..." />
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>

                    <ObjectPageSection>
                        <subSections>
                            <ObjectPageSubSection mode="Expanded" 
                                title="Tasks">
                                <blocks>
                                    <m:Text text="Tasks..." />
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>

                    <ObjectPageSection>
                        <subSections>
                            <ObjectPageSubSection mode="Expanded" 
                                title="Graph">
                                <blocks>
                                    <m:Text text="Graph..." />
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>

                </sections>
            </ObjectPageLayout>

        </m:content>
    </m:Page>
</mvc:View>