<mvc:View controllerName="UI5FioriForTools.controller.MainNavigation.ObjectView.ObjectScenario1" 
  xmlns:l="sap.ui.layout" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:f="sap.f" 
  xmlns:m="sap.m" 
  xmlns="sap.uxap">

  <m:Page title="Cloud Integration Service">
    <m:content>

      <ObjectPageLayout enableLazyLoading="true" 
        headerContentPinnable="true">
        <headerTitle>
          <ObjectPageDynamicHeaderTitle>

            <breadcrumbs>
              <m:Breadcrumbs>
                <m:Link text="Integration Scenarios" 
                  href=".#/sap.m.List/sap.m.ObjectListItem" />
              </m:Breadcrumbs>
            </breadcrumbs>

            <expandedHeading>
              <m:FlexBox wrap="Wrap" 
                fitContainer="true" 
                alignItems="Center">
                <m:Title text="{/Name}" 
                  wrapping="true"></m:Title>
              </m:FlexBox>
            </expandedHeading>

            <snappedHeading>
              <m:FlexBox wrap="Wrap" 
                fitContainer="true" 
                alignItems="Center">
                <m:FlexBox wrap="NoWrap" 
                  fitContainer="true" 
                  alignItems="Center" 
                  class="sapUiTinyMarginEnd">
                  <f:Avatar src="sap-icon://activities" 
                    displayShape="Circle" 
                    displaySize="S" 
                    class="sapUiTinyMarginEnd" />
                  <m:Title text="{/Name}" 
                    wrapping="true"></m:Title>
                </m:FlexBox>
              </m:FlexBox>
            </snappedHeading>

            <expandedContent>
              <m:Text text="{/Documentation}" />
            </expandedContent>

            <snappedContent>
              <m:Text text="{/Documentation}" />
            </snappedContent>

            <actions>
              <ObjectPageHeaderActionButton icon="sap-icon://action" 
                type="Transparent" 
                text="Share" 
                tooltip="Share" />
            </actions>

            <navigationActions>
              <ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-up" 
                type="Transparent" 
                tooltip="Move up" 
                enabled="false" />
              <ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-down" 
                type="Transparent" 
                tooltip="Move down" />
            </navigationActions>

          </ObjectPageDynamicHeaderTitle>

        </headerTitle>
        <headerContent>
          <m:FlexBox wrap="Wrap" 
            fitContainer="true" 
            alignItems="Stretch">

            <f:Avatar class="sapUiSmallMarginEnd sapUiSmallMarginTop" 
              src="sap-icon://activities" 
              displaySize="L">
            </f:Avatar>

            <l:VerticalLayout class="sapUiSmallMarginEnd sapUiSmallMarginTop">
              <m:ObjectStatus title="Execution Instance ID" 
                text="{/ExecutionInstanceID}" />
              <m:ObjectStatus title="Status" 
                text="{/Status}" 
                state="{/StatusInfoState}" />
              <m:ProgressIndicator percentValue="{/Completion}" 
                displayValue="{/CompletedTasks}/{/AllTasks}" 
                showValue="true" 
                state="None" />
            </l:VerticalLayout>
          </m:FlexBox>
        </headerContent>

        <sections>

          <ObjectPageSection>
            <subSections>
              <ObjectPageSubSection mode="Expanded" 
                title="Description">
                <blocks>
                  <m:Text text="Description..." />
                </blocks>
              </ObjectPageSubSection>
            </subSections>
          </ObjectPageSection>

          <ObjectPageSection>
            <subSections>
              <ObjectPageSubSection mode="Expanded" 
                title="Tasks">
                <blocks>
                  <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.ListView.withHeader.Tasks.Scenario1.Example2-ObjectList" 
                    class="sapUiSmallMarginBottom" />
                </blocks>
              </ObjectPageSubSection>
            </subSections>
          </ObjectPageSection>

          <ObjectPageSection>
            <subSections>
              <ObjectPageSubSection mode="Expanded" 
                title="Graph">
                <blocks>
                  <mvc:XMLView viewName="UI5FioriForTools.view.MainNavigation.GraphView.Horizontal.Scenario1" />
                </blocks>
              </ObjectPageSubSection>
            </subSections>
          </ObjectPageSection>

        </sections>
      </ObjectPageLayout>

    </m:content>
  </m:Page>

</mvc:View>