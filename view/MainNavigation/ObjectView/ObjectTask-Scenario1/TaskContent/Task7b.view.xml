    xmlns:m="sap.m" 
    xmlns="sap.uxap">

    <m:VBox class="sapUiSmallMargin">
        <form:SimpleForm title="SAP Cloud Platform Integration" 
            class="sapUiSmallMarginBottom" 
            editable="true" 
            layout="ResponsiveGridLayout" 
            labelSpanXL="4" 
            labelSpanL="3" 
            labelSpanM="4" 
            labelSpanS="12" 
            adjustLabelSpan="false" 
            emptySpanXL="0" 
            emptySpanL="4" 
            emptySpanM="0" 
            emptySpanS="0" 
            columnsXL="2" 
            columnsL="1" 
            columnsM="1" 
            singleContainerFullSize="false">
            <m:Label text="Use External Cost Center" />
            <m:CheckBox text="" 
                selected="true" 
                enabled="false"></m:CheckBox>
            <m:Label text="Default Language" />
            <m:Text text="en_EN" />
            <m:Label text="Additional Languages" />
            <m:Text text="de_DE, fr_FR" />
            <m:Label text="Enable Payload Logging" />
            <m:CheckBox text="" 
                selected="true" 
                enabled="false"></m:CheckBox>
            <m:Label text="SAP Cloud Platform Integration User ID" />
            <m:Text text="P_User_ID" />
            <m:Label text="SFSF API User" />
            <m:Text text="SFSF_User_ID" />
            <m:Label text="Package Name" />
            <m:Text text="ERP to SuccessFactors Employee Central Cost Center" />
            <m:Label text="Sender Address:" />
            <m:Text text="/ERP_to_EC_CostCenter_Replication" />
        </form:SimpleForm>
        <form:SimpleForm title="SAP S/4HANA" 
            editable="true" 
            layout="ResponsiveGridLayout" 
            labelSpanXL="4" 
            labelSpanL="3" 
            labelSpanM="4" 
            labelSpanS="12" 
            adjustLabelSpan="false" 
            emptySpanXL="0" 
            emptySpanL="4" 
            emptySpanM="0" 
            emptySpanS="0" 
            columnsXL="2" 
            columnsL="1" 
            columnsM="1" 
            singleContainerFullSize="false">
            <m:Label text="Gateway Host" />
            <m:Text text="ldcis2y" />
            <m:Label text="Gateway Host" />
            <m:Text text="29" />
            <m:Label text="Gateway Trusted RFC Connection" />
            <m:Text text="GATEWAY_TRUSTED_CON" />
            <m:Label text="Gateway Logon Language" />
            <m:Text text="en_EN" />
            <m:Label text="Gateway Logon Client" />
            <m:Text text="300" />
        </form:SimpleForm>
    </m:VBox>
</mvc:View>