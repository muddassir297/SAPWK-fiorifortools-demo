<mvc:View height="100%" 
    controllerName="UI5FioriForTools.controller.MainNavigation.MainView" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
